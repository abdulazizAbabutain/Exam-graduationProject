@{
    var points = 0;
    var numberOfQueations = Model.AnswerSheets.Count;
}
@model ShowReultsViewModel
<h1>show result</h1>



@for (var i = 0; i < Model.AnswerSheets.Count; i++)
{

    <div class="card">
        <div class="card-header">
            <h3>
                @Model.AnswerSheets[i].Question.Question
            </h3>
        </div>
        <div class="card-body">
            <div>
                <div class="form-check">
                    <label>1.</label>
                    @Model.AnswerSheets[i].Question.Option1
                </div>
                <div class="form-check">
                    <label>2.</label>
                    @Model.AnswerSheets[i].Question.Option2
                </div>
                <div class="form-check">
                    <label>3.</label>
                    @Model.AnswerSheets[i].Question.Option3
                </div>
                <div class="form-check">
                    <label>4.</label>
                    @Model.AnswerSheets[i].Question.Option4
                </div>
            </div>
        </div>
        <div class="card-footer">
            the right answer
            @switch (Model.AnswerSheets[i].CorrectAnswer)
            {
                case 1:
                    <strong>
                        @Model.AnswerSheets[i].Question.Option1
                    </strong>
                    break;
                case 2:
                    <strong>
                        @Model.AnswerSheets[i].Question.Option2
                    </strong>
                    break;
                case 3:
                    <strong>
                        @Model.AnswerSheets[i].Question.Option3
                    </strong>
                    break;
                case 4:
                    <strong>
                        @Model.AnswerSheets[i].Question.Option4
                    </strong>
                    break;
            }
            <br />
            your Answer
            @switch (Model.AnswerSheets[i].Answer)
            {
                case 1:
                    <strong>
                        @Model.AnswerSheets[i].Question.Option1
                    </strong>
                    break;
                case 2:
                    <strong>
                        @Model.AnswerSheets[i].Question.Option2
                    </strong>
                    break;
                case 3:
                    <strong>
                        @Model.AnswerSheets[i].Question.Option3
                    </strong>
                    break;
                case 4:
                    <strong>
                        @Model.AnswerSheets[i].Question.Option4
                    </strong>
                    break;
            }
        </div>
    </div>
    @if (Model.AnswerSheets[i].Answer == Model.AnswerSheets[i].CorrectAnswer)
    {
        points++;
    }
}
<div class="card">
    <div class="card-header">
        <strong>
            Total points @points
        </strong>
        <br>
        <strong>
            in present
        </strong>
        @{ var result = (points / numberOfQueations) * 100; <text> @result %</text> }

    </div>
</div>
