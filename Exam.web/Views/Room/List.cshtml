@model ListRoomViewModel


<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Department</th>
            <th>Made By</th>
            <th>Number of users</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            int index = 1;
        }  
        @foreach (var room in Model.Rooms)
        {
            <tr>
                @{ 
                    <td>@index</td>
                    index++;
                }
                <td>@room.Title</td>
                <td>@room.Description</td>
                <td>@room.Department</td>
                <td>@room.RoomOwner.UserName</td>
                <td>@room.Users.Count</td>
                <td>
                    <a type="button" class="btn btn-primary " asp-controller="Room" asp-action="ExamRoom" asp-route-id="@room.RoomId">
                        <svg width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                            <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                        </svg>
                    </a>
                    @if (User.Identity.Name.Equals(room.RoomOwner.UserName))
                    {
                        <a type="button" class="btn btn-danger bi bi-trash" asp-controller="Room" asp-action="DeleteRoom" asp-route-id="@room.RoomId">
                            <svg width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>

                    }
                </td>
            </tr>
          
        }
    </tbody>
</table>